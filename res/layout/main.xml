<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

	<Button 
	    android:text="Cadastrar Loja"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:id="@+id/cadastrarLoja"	    
	    />

	<Button 
	    android:text="Visualizar Lojas"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:id="@+id/visualizarLojas"	    
	    />
	
	<Button 
	    android:text="Excluir Lojas"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:id="@+id/excluirLojas"	    
	    />
	
	<Button 
	    android:text="Sincronizar Lojas"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:id="@+id/sincLojas"
	    />
	
</LinearLayout>